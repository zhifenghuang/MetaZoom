<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ImageViewRatio">
        <attr name="ratio" format="float" />
    </declare-styleable>

    <declare-styleable name="CardViewRatio">
        <attr name="cardView_ratio" format="float" />
    </declare-styleable>

    <declare-styleable name="FocusImageView">
        <attr name="focus_focusing_id" format="integer" />
        <attr name="focus_success_id" format="integer" />
        <attr name="focus_fail_id" format="integer" />
    </declare-styleable>


    <declare-styleable name="RoundRectImageView">
        <attr name="round_radius" format="integer" />
        <attr name="only_top_round" format="boolean" />
    </declare-styleable>

    <declare-styleable name="PagerDotView">
        <attr name="selectedPageDotColor" format="integer" />
        <attr name="otherPageDotColor" format="integer" />
        <attr name="totalPage" format="integer" />
        <attr name="direction" format="integer" />
    </declare-styleable>

    <declare-styleable name="ScaleLayout">
        <attr name="width_height_scale" format="float" />
    </declare-styleable>

    <declare-styleable name="RangeSeekBar">
        <attr name="absoluteMinValue" format="integer|float" />
        <attr name="absoluteMaxValue" format="integer|float" />
        <attr name="singleThumb" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircularProgressView">
        <attr name="backWidth" format="dimension" />    <!--背景圆环宽度-->
        <attr name="progWidth" format="dimension" />    <!--进度圆环宽度-->
        <attr name="backColor" format="color" />        <!--背景圆环颜色-->
        <attr name="progColor" format="color" />        <!--进度圆环颜色-->
        <attr name="progStartColor" format="color" />   <!--进度圆环开始颜色-->
        <attr name="progFirstColor" format="color" />   <!--进度圆环结束颜色-->
        <attr name="progress" format="integer" />       <!--圆环进度-->
    </declare-styleable>


    <!--首页banner-->
    <declare-styleable name="BannerView">
        <attr name="open_mz_mode" format="boolean" />
        <attr name="canLoop" format="boolean" />
        <attr name="showIndicator" format="boolean" />
        <attr name="indicatorPaddingLeft" format="dimension" />
        <attr name="indicatorPaddingRight" format="dimension" />
        <attr name="indicatorPaddingTop" format="dimension" />
        <attr name="indicatorPaddingBottom" format="dimension" />
        <attr name="indicatorAlign">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
        <attr name="middle_page_cover" format="boolean" />
    </declare-styleable>


</resources>