<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f3_f7_fa"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/layout_top_bar_2" />

    <View
        android:id="@+id/topLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="50dp"
        android:background="@color/color_e2_eb_f0" />

    <LinearLayout
        android:id="@+id/llBottomTab"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_ff_ff_ff"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingBottom="40dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_f3_f7_f9" />

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llAlbum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_chat_tab_message"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_album" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="3dp"
                    android:text="@string/chat_album"
                    android:textColor="@color/color_8c_8c_8c"
                    android:textSize="11dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCamera"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_chat_tab_message"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_camera" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="3dp"
                    android:text="@string/chat_take_photo"
                    android:textColor="@color/color_8c_8c_8c"
                    android:textSize="11dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llVideo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_chat_tab_message"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_video" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="3dp"
                    android:text="@string/chat_video"
                    android:textColor="@color/color_8c_8c_8c"
                    android:textSize="11dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llFile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_chat_tab_message"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_file" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="3dp"
                    android:text="@string/chat_file"
                    android:textColor="@color/color_8c_8c_8c"
                    android:textSize="11dp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llLeaveMsg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_chat_tab_message"
                    android:scaleType="centerInside"
                    android:src="@drawable/chat_leave_msg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="3dp"
                    android:text="@string/chat_leave_msg"
                    android:textColor="@color/color_8c_8c_8c"
                    android:textSize="11dp" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/llBottomTab"
        android:background="@color/color_ff_ff_ff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:paddingRight="8dp"
            android:textSize="12dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_00_00_00"
            android:text="@string/chat_online_service"
            android:drawableTop="@drawable/chat_service" />

        <TextView
            android:id="@+id/tvRecord"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/bg_chat_record_box"
            android:gravity="center"
            android:text="@string/chat_release_send"
            android:textColor="@color/color_8c_8c_8c"
            android:textSize="15dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvInForbid"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/bg_chat_record_box"
            android:gravity="center"
            android:text="@string/chat_in_forbid"
            android:textColor="@color/color_8c_8c_8c"
            android:textSize="15dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/llChat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/bg_chat_text_box"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/etChat"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@null"
                android:maxLength="2000"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:hint="@string/chat_please_click_question_get_answer"
                android:textColor="@color/color_00_00_00"
                android:textColorHint="@color/color_8c_8c_8c"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/ivSend"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_chat_send"
                android:scaleType="centerInside"
                android:visibility="gone" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivMsgDeleteType"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/chat_delete_type_1"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivAdd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_add" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/llBottom"
        android:layout_marginTop="44dp" />


</RelativeLayout>