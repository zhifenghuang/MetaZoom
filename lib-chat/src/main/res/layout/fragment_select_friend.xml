<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ff_ff_ff"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_7a_5b_d0">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:onClick="onBackClick"
            android:paddingLeft="18dp"
            android:paddingRight="14dp"
            android:src="@drawable/chat_back_white"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/chat_new_group"
                android:textColor="@color/text_color_3"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="@string/chat_up_to_200_members"
                android:textColor="@color/text_color_3"
                android:textSize="14dp" />
        </LinearLayout>


    </FrameLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvNoContacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="180dp"
        android:singleLine="true"
        android:text="@string/chat_no_contacts"
        android:textColor="@color/text_color_1"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvNoContactsDesc"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="23dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="@string/chat_have_no_contacts"
        android:textColor="@color/text_color_2"
        android:textSize="15dp" />


    <ImageView
        android:id="@+id/ivNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/chat_next" />


</LinearLayout>