<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f8_f8_f8"
    android:orientation="vertical">

    <include layout="@layout/layout_top_bar_2" />

    <LinearLayout
        android:id="@+id/llNewNotice"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="15dp"
        android:background="@color/color_ff_ff_ff"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/chat_new_notice"
            android:textColor="@color/text_color_1"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/ivNoticeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/chat_switch_off" />

    </LinearLayout>


    <TextView
        android:id="@+id/tvDeleteAfterRead"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="1dp"
        android:background="@color/color_ff_ff_ff"
        android:drawableRight="@drawable/chat_right_arrow"
        android:gravity="center_vertical"
        android:paddingLeft="25dp"
        android:paddingRight="28dp"
        android:text="@string/chat_delete_after_read"
        android:textColor="@color/text_color_1"
        android:textSize="15dp" />


    <TextView
        android:id="@+id/tvBlackList"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/color_ff_ff_ff"
        android:drawableRight="@drawable/chat_right_arrow"
        android:gravity="center_vertical"
        android:layout_marginTop="11dp"
        android:paddingLeft="25dp"
        android:paddingRight="28dp"
        android:text="@string/chat_blacklist"
        android:textColor="@color/text_color_1"
        android:textSize="15dp" />


</LinearLayout>